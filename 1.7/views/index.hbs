{{#extends 'base'}}

{{#block "content"}}
<h1>CICO Food Tracker</h1>

<h2>Logged Food</h2>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Food Name</th>
            <th>Calories</th>
            <th>Meal</th>
            <th>Tags</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        {{#each foodRecords}}
        <tr>
            <td>{{this.id}}</td>
            <td>{{this.foodName}}</td>
            <td>{{this.calories}}</td>
            <td>{{this.meal}}</td>
            <td>{{this.tags}}</td>
            <td>
                <a href="/delete-food/{{this.id}}" class="btn btn-danger btn-sm">Delete</a>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>




{{/block}}

{{/extends}}